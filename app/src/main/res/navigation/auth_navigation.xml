<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/auth_navigation"
    app:startDestination="@id/authStartFragment">

    <fragment
        android:id="@+id/authStartFragment"
        android:name="com.jenyasubbotina.adoptme.ui.fragment.AuthStartFragment"
        android:label="AuthStartFragment"
        tools:layout="@layout/fragment_auth_start">
        <action
            android:id="@+id/action_authStartFragment_to_signUpFragment"
            app:destination="@id/signUpFragment" />
    </fragment>

    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.jenyasubbotina.adoptme.ui.fragment.SignUpFragment"
        android:label="fragment_sign_up"
        tools:layout="@layout/fragment_sign_up" />
</navigation>